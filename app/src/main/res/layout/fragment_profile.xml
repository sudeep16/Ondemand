<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFFFF"
    tools:context=".fragments.HomeFragment"
    >
    <RelativeLayout
        android:id="@+id/toplay"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/gradient"
        android:padding="20dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_gp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            tools:ignore="RedundantNamespace"
            tools:src="@tools:sample/avatars[15]" />



        <TextView
            android:id="@+id/etPId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/profile_image_gp"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="30dp"/>

        <LinearLayout
            android:layout_below="@id/etPId"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_marginTop="100dp"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome"
                android:textSize="30sp"
                android:layout_below="@id/etPId"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/etPFirstName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textSize="25sp"
                android:layout_below="@id/etPId"
                android:textColor="@color/black"
                />


        </LinearLayout>




    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-79dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#1FCCAF"
            android:padding="5dp"
            >
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:padding="5dp">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:src="@drawable/ic_baseline_work_24" />

                <TextView
                    android:id="@+id/tvPendingJob"
                    android:includeFontPadding="false"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="$123"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/btnPjob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending Jobs"
                    android:background="@drawable/roundbtn"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/tvPendingJob"/>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#1FCCAF"
            android:padding="5dp">


            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:padding="5dp">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:src="@drawable/ic_baseline_stars_24" />

                <TextView
                    android:id="@+id/tvReward"
                    android:includeFontPadding="false"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="$123"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/btnReward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reward points"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/tvReward"
                    android:padding="10dp"
                    android:background="@drawable/roundbtn"
                    />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First Name"
                    android:layout_weight="1"
                    android:textColorHint="@color/black">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nischal"
                        android:inputType="text"
                        android:textColor="@color/black"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    android:layout_weight="1"
                    android:textColorHint="@color/black">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shakya"
                        android:inputType="text"
                        android:textColor="@color/black"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:layout_weight="1"
                android:textColorHint="@color/black">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:text="Nischal"
                    android:textColor="@color/black"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:layout_weight="1"
                android:textColorHint="@color/black">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPAddresss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Patan"
                    android:inputType="text"
                    android:textColor="@color/black"/>
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:layout_weight="1"
                android:textColorHint="@color/black">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:text="nischal.shk@gmail.com"
                    android:textColor="@color/black"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone No."
                android:layout_weight="1"
                android:textColorHint="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9860172363"
                    android:inputType="number"
                    android:textColor="@color/black"

                    />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/gradient"
        >
        <Button
            android:id="@+id/btnPUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1FCCAF"
            android:text="Update"
            android:layout_margin="20dp"
            />
        <Button
            android:id="@+id/btnPDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1FCCAF"
            android:text="Delete"
            android:layout_margin="20dp"
            />
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_margin="20dp"
            android:background="#1FCCAF"
            />
    </LinearLayout>
</LinearLayout>
</LinearLayout>